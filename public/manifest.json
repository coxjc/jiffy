{
  "manifest_version": 2,
  "version": "0.0.3",
  "short_name": "Jifhub",
  "name": "Jifhub",
  "description": "Get Markdown-formatted links for GIFS, for embedding in Github PRs, comments, etc.",
  "browser_action": {
    "default_title": "CRE",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "permissions": [],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
